<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/nameItemStandingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toronto Raptors"
                android:textSize="@dimen/_14ssp"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/playedItemStandingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="105"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@+id/nameItemStandingTV"
                app:layout_constraintStart_toEndOf="@+id/nameItemStandingTV"
                app:layout_constraintTop_toTopOf="@+id/nameItemStandingTV" />

            <TextView
                android:id="@+id/winItemStandingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@+id/playedItemStandingTV"
                app:layout_constraintStart_toEndOf="@+id/playedItemStandingTV"
                app:layout_constraintTop_toTopOf="@+id/playedItemStandingTV" />

            <TextView
                android:id="@+id/drawItemStandingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@+id/winItemStandingTV"
                app:layout_constraintStart_toEndOf="@+id/winItemStandingTV"
                app:layout_constraintTop_toTopOf="@+id/winItemStandingTV" />

            <TextView
                android:id="@+id/lossItemStandingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="32"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/drawItemStandingTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/drawItemStandingTV"
                app:layout_constraintTop_toTopOf="@+id/drawItemStandingTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>