<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zeeb.footballmatchschedule.screen.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailActivity"
            app:destination="@id/detailActivity" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteActivity"
            app:destination="@id/favoriteActivity" />
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.zeeb.footballmatchschedule.screen.detail.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />
    <activity
        android:id="@+id/favoriteActivity"
        android:name="com.zeeb.footballmatchschedule.screen.favorite.FavoriteActivity"
        android:label="activity_favorite"
        tools:layout="@layout/activity_favorite" />
</navigation>